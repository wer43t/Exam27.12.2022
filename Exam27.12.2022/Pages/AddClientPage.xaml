<Page x:Class="Exam27._12._2022.Pages.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam27._12._2022.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Имя"/>
        <TextBox Text="{Binding name}" Grid.Row="1"/>
        <Label Content="Фамилия" Grid.Row="2"/>
        <TextBox Text="{Binding surname}" Grid.Row="3"/>
        <Button Content="Сохранить" Grid.Row="4" x:Name="btnSave" Click="btnSave_Click"/>
    </Grid>
</Page>
